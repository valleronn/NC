<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nc.controller.CalendarWindowController">
   <children>
      <VBox alignment="CENTER" prefHeight="380.0" prefWidth="380.0" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <DatePicker GridPane.columnIndex="1" />
                  <DatePicker GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="Start Date" />
                  <Label text="End Date" GridPane.rowIndex="1" />
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </GridPane>
            <Button mnemonicParsing="false" onAction="#updateTaskList" text="Update">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <TableView fx:id="calendarTaskTable" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="dateColumn" prefWidth="130.0" text="Date" />
                <TableColumn fx:id="titleColumn" prefWidth="249.0" text="Task" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
